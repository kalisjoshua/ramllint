{
  "name": "ramllint",
  "version": "1.2.2",
  "description": "RAML Lint",
  "author": "Tyler Smith <TylerSmith@quickenloans.com",
  "contributors": [
    "Joshua T Kalis <KalisJoshua@gmail.com>",
    "Jorden Lowe <JordenLowe@quickenloans.com>"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/QuickenLoans/ramllint"
  },
  "bugs": {
    "url": "http://github.com/QuickenLoans/ramllint/issues"
  },
  "engines": {
    "node": ">=0.12.3"
  },
  "bin": {
    "ramllint": "./src/cli.js"
  },
  "main": "src/linter.js",
  "dependencies": {
    "cli-color": "^1.0.0",
    "commander": "^2.8.1",
    "raml2obj": "^2.0.0"
  },
  "devDependencies": {
    "codacy-coverage": "^1.1.0",
    "coveralls": "^2.11.2",
    "eslint": "^0.20.0",
    "istanbul": "^0.3.13",
    "jsdoc": "^3.3.0-beta3",
    "jshint": "^2.7.0",
    "mocha": "^2.2.4",
    "mocha-lcov-reporter": "0.0.2",
    "plato": "^1.4.0"
  },
  "scripts": {
    "cover": "istanbul cover --dir docs/coverage _mocha",
    "doc": "jsdoc -c ./conf.json src/**.js",
    "predoc": "rm -rf docs",
    "lint": "jshint src/**.js && eslint src/**.js",
    "publish": "npm run pub:commit && npm run pub:push",
    "prepublish": "npm run pub:doc",
    "postpublish": "git reset --hard HEAD^",
    "pub:commit": "git commit -m \"gh-pages update\" docs",
    "prepub:commit": "git add -f docs/**",
    "pub:doc": "npm run doc && npm run cover && npm run stats",
    "pub:push": "git push upstream `git subtree split --prefix docs`:gh-pages --force",
    "quality": "npm run lint && npm test && npm run cover",
    "stats": ". ./generateStats.sh",
    "prestats": "rm -rf docs/stats",
    "test": "mocha",
    "vnd:coverage": "npm run vnd:codacy && npm run vnd:coveralls",
    "prevnd:coverage": "istanbul cover _mocha --report lcovonly -- -R spec",
    "postvnd:coverage": "rm -rf ./coverage",
    "vnd:codacy": "cat ./coverage/lcov.info | ./node_modules/codacy-coverage/bin/codacy-coverage.js",
    "vnd:coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "watch": "npm test -- -R min -w --watch-extensions json"
  }
}
